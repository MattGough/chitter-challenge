<! DOCTYPE html>
<html>
<center>
<h1> CHITTER </h1>
</center>

<body>
  <% if current_user %>
    Welcome, <%= current_user.username %>
    <br >
    <br >
    <form method='post' action='/post_message'>
      <label> Message
      <input type='text' name='message'></label>
      <input type='submit' value='Post'>
    </form>
<% else %>
 <a href="users/new">Sign Up</a>
  <% end %>
<% if @messages != nil %>
<ul id='messages'>
  <% @messages.each do |message| %>
  <li>
   <%= message.time %>
     <ul>
     <%= message.text %>
    </ul>
  </li>
  <% end %>
</ul>
<% end %>
</body>
</html>
